<div class="container">
  <h2 class="text-center">Ανέβασμα Θεμάτων</h2>
  <noscript>
    <style>
      #photoUploadForm,
      #afterSubmitLoader {
        display: none;
      }
    </style>
    <h3 class="text-center text-danger">
      Για να ανεβάσετε θέματα απαιτείται JavaScript
      <i class="fa fa-frown-o" aria-hidden="true"></i>
    </h3>
  </noscript>
  <form
    method="post"
    action="/upload"
    enctype="multipart/form-data"
    id="photoUploadForm"
    class="form-horizontal"
  >
    <fieldset class="col-md-8 col-md-offset-2">
      <div class="form-group">
        <div
          id="uploadResultMessage"
          class="col-md-8 col-md-offset-2 label label-danger"
        ></div>
        {{#if resultMessage}}
        <div
          class="col-md-8 col-md-offset-2 label label-{{#if error}}danger{{else}}success{{/if}}"
        >
          {{resultMessage}}
        </div>
        {{/if}}
      </div>
      <div class="form-group">
        <label class="col-md-4 control-label">Φωτογραφία</label>
        <div class="col-md-6">
          <label class="form-control">
            <div class="col-md-12 text-center">
              <span id="upload-file-info">Επιλογή Φωτογραφίας</span>
              <input
                type="file"
                name="image"
                required
                autocomplete="off"
                id="inputImage"
                class="hidden"
              />
            </div>
          </label>
        </div>
      </div>
      <div class="form-group">
        <label for="courseNameInput" class="col-md-4 control-label"
          >Μάθημα</label
        >
        <div class="col-md-6">
          <input
            class="course-input form-control text-center"
            name="courseName"
            id="courseNameInput"
            placeholder="Πληκτρολογείστε Ελληνικά ή Greeklish"
            type="text"
            list="coursesList"
            required
            autocomplete="off"
          />
          <datalist id="coursesList">
            {{#each courses}}
            <option class="courseAutocompleInput">{{this.name}}</option>
            <option class="courseAutocompleInput" value="{{this.name}}">
              {{this.key}}
            </option>
            {{/each}}
          </datalist>
        </div>
      </div>
      <div class="form-group">
        <label for="select" class="col-md-4 control-label">Χρόνος</label>
        <div class="col-md-6">
          <input
            type="number"
            name="year"
            class="form-control text-center"
            min="{{startingYear}}"
            max="{{currentYear}}"
            value="{{currentYear}}"
            required
          />
        </div>
      </div>
      <div class="form-group">
        <label for="select" class="col-md-4 control-label">Μήνας</label>
        <div class="col-md-6">
          <select name="period" class="form-control text-center" required>
            <option value="Ιανουάριος">Ιανουάριος</option>
            <option value="Ιούνιος">Ιούνιος</option>
            <option value="Σεπτέμβριος">Σεπτέμβριος</option>
          </select>
        </div>
      </div>
      {{#if useCaptchaOnUploads}}
      <div class="form-group">
        <div class="col-md-4 col-md-offset-4">
          <div class="g-recaptcha" data-sitekey="{{RECAPTCHA_KEY}}"></div>
        </div>
      </div>
      {{/if}}
      <div class="form-group">
        <div class="col-md-4 col-md-offset-4">
          <button type="submit" class="btn btn-primary">Αποστολή</button>
        </div>
      </div>
    </fieldset>
  </form>
  <div class="col-xs-12 text-center initHidden" id="afterSubmitLoader">
    <h2 class="col-xs-12">Παρακαλώ περιμένετε</h2>
    <i class="fa fa-spinner fa-pulse fa-5x fa-fw"></i>
    <span class="sr-only">Loading...</span>
  </div>
</div>
<script src="https://www.google.com/recaptcha/api.js"></script>
