<div class="container">
	<h2 class="text-center">Ανέβασμα Θεμάτων</h2>
	<form method="post" action="/upload" enctype="multipart/form-data" id="photoUploadForm" class="form-horizontal">
		<fieldset class="col-md-8 col-md-offset-2">
			<div class="form-group">
				<div id="uploadResultMessage" class="col-md-8 col-md-offset-2 label label-danger"></div>
				<div class="col-md-8 col-md-offset-2 label label-{{#if error}}danger{{else}}success{{/if}}">{{resultMessage}}</div>
			</div>
			<div class="form-group">
				<label class="col-md-4 control-label">Φωτογραφία</label>
				<div class=" col-md-6">
					<label class="form-control">
						<div class="col-md-12 text-center">
							<span id="upload-file-info">Επιλογή Φωτογραφίας</span>
							<input type="file" name="image" required autocomplete="off" id="inputImage" class="hidden" />
						</div>
					</label>
				</div>
			</div>
			<div class="form-group">
				<label for="courseNameInput" class="col-md-4 control-label">Μάθημα</label>
				<div class="col-md-6">
					<input class="course-input form-control text-center" name="courseName" id="courseNameInput" placeholder="Πληκτρολογείστε Ελληνικά ή Greeklish" type="text" list="coursesList" required autocomplete="off">
					<datalist id="coursesList">
					{{#each courses}}
						<option class="courseAutocompleInput yoyo">{{this.name}}</option>
						<option class="courseAutocompleInput" value="{{this.name}}">{{this.key}}</option>
					{{/each}}
					</datalist>
				</div>
			</div>
			<div class="form-group">
				<label for="select" class="col-md-4 control-label">Χρόνος</label>
				<div class="col-md-6">
					<select name="year" class="form-control text-center" required>
					{{#each years}}
						<option value="{{this}}">{{this}}</option>
					{{/each}}
					</select>
				</div>
			</div>
			<div class="form-group">
				<label for="select" class="col-md-4 control-label">Μήνας</label>
				<div class="col-md-6">
					<select name="period" class="form-control  text-center" required>
						<option value="Ιανουάριος">Ιανουάριος</option>
						<option value="Ιούνιος">Ιούνιος</option>
						<option value="Σεπτέμβριος">Σεπτέμβριος</option>
					</select>
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-4 col-md-offset-4">
					<button type="submit" class="btn btn-primary">Αποστολή</button>
				</div>
			</div>
		</form>
	</fieldset>
	<div class="col-xs-12 text-center initHidden" id="afterSubmitLoader">
		<h2 class="col-xs-12">Παρακαλώ περιμένετε</h2>
		<i class="fa fa-spinner fa-pulse fa-5x fa-fw"></i>
		<span class="sr-only">Loading...</span>
	</div>
</div>
